rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Zezwól na publiczny odczyt dla wszystkich kolekcji
    match /{document=**} {
      allow read: if true;
    }

    // Zezwól na zapis (tworzenie, aktualizację, usuwanie) tylko dla zalogowanych użytkowników
    // w kolekcjach 'deals' i 'products'
    match /deals/{dealId} {
      allow write: if request.auth != null;
    }
    match /products/{productId} {
      allow write: if request.auth != null;
    }
    
    // Zezwól na dodawanie komentarzy tylko zalogowanym użytkownikom
    match /deals/{dealId}/comments/{commentId} {
       allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
       allow read: if true;
    }
    match /products/{productId}/comments/{commentId} {
       allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
       allow read: if true;
    }
  }
}
